CompileFlags:
  Add:
    - -std=c++17
    - -Wall
    - -Wextra
    - -Iinclude
    - -Isrc
    - -pthread
    - -DCUDA_AVAILABLE  # Define if you plan to use CUDA
  Compiler: clang++

Index:
  Background: Build

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add:
      - modernize-*
      - performance-*
      - readability-*
    Remove:
      - modernize-use-trailing-return-type
      - readability-identifier-length

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true